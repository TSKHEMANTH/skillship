//Searching an element in a sorted array//

#include <stdio.h>

int main() {
	//code
	int t,i;
	scanf("%d",&t);
	for(i=0;i<t;i++)
	{
	    int n,k,j,g=0;
	    scanf("%d",&n);
	    scanf("%d",&k);
	    int a[n];
	    for(j=0;j<n;j++)
	    {
	        scanf("%d",&a[j]);
	    }
	    for(j=0;j<n;j++)
	    {
	        if(k==a[j])
	        {
	            g=1;
	            break;
	        }
	    }
	    if(g==1)
	    {
	        printf("%d",g);
	    }
	    else
	    {
	        printf("-1");
	    }
	    printf("\n");
	}
	return 0;
}
